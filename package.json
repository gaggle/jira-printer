{
  "name": "jira-printer",
  "description": "Server to display Jira issues for easy printing",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run tailwind:css && razzle start",
    "start:prod": "NODE_ENV=production node build/server.js",
    "build": "npm run tailwind:css && razzle build",
    "tailwind:css": "tailwind build src/tailwind.css -c tailwind.config.js -o src/styles.css",
    "test": "razzle test --env=jsdom",
    "clean": "rm -rf build"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^9.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.1.2",
    "showdown": "^1.9.0",
    "simple-jira-client": "github:gaggle/simple-jira-client",
    "tailwindcss": "^1.1.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/express": "^4.17.0",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^23.3.14",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/node": "^12.6.6",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/showdown": "^1.9.3",
    "@types/webpack-env": "^1.14.0",
    "razzle": "3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.18.0",
    "tslint-forbidden-imports": "^1.0.9",
    "tslint-react": "^4.0.0",
    "typed-css-modules-webpack-plugin": "^0.1.2",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
